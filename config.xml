<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.stippen.vlindersXL" 
	version="1.0.6" 
	
	xmlns="http://www.w3.org/ns/widgets" 
	xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Vlinders Extra</name>
    <description>
        Vlinders in de Tuin met Extra Vlinders.
    </description>
    <author email="stichting.stippen@gmail.com" href="http://stippen.nl">
        stichting Stippen.nl
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />

	
	
	<gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />
	<plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
	
	<icon  src="www/res/icon/512x.png" width="512" height="512" />
    

<platform name="ios">
	<splash density="port-hdpi" src="www/res/screen/480x800.png" width="480" height="800" />
	<splash density="port-ldpi" src="www/res/screen/240x320.png" width="240" height="320" />
	<splash density="port-mdpi" src="www/res/screen/320x480.png" width="320" height="480" />
	<splash density="port-xhdpi" src="www/res/screen/720x1280.png" width="720" height="1280" />
	<splash density="port-xxhdpi" src="www/res/screen/960x1600.png" width="960" height="1600" />
	<splash density="port-xxxhdpi" src="www/res/screen/1280x1920.png" width="1280" height="1920" />

  </platform> 
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
